{% extends 'base.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <div class="card">
                    <img class="card-img-top" src="data:image/jpeg;base64,{{ event.image | raw }}" alt="Event Image">
                    <div class="card-body">
                        <div class="d-flex justify-content-between border-bottom pb-3">
                            <div>
                                <span class="fw-bold">Date debut:</span> {{ event.datedebut | date('M-d-Y') }}
                            </div>
                            <div>
                                <span class="fw-bold">Date fin:</span> {{ event.datefin | date('M-d-Y') }}
                            </div>
                        </div>
                        <div class="text-center p-4">
                            <h3 class="card-title">{{ event.type }}</h3>
                            <h5 class="card-title">{{ event.name }}</h5>
                        </div>
                        <p class="card-text">{{ event.description }}</p>

                        <div class="d-flex justify-content-center mt-3">
                            <a href="{{ path('app_addParticipant', {'id': event.id, 'userId': user.id}) }}" class="btn btn-primary btn-sm me-2" style="border-radius: 30px;">Participate</a>
                            
                            <a href="{{ path('app_show') }}" class="btn btn-secondary btn-sm" style="border-radius: 30px;">Back to list</a>
                        </div>

                        <form method="post" action="{{ path('app_Addcomment_event', {'id': event.id}) }}" class="mt-4">
                            <div class="mb-3">
                                <label for="commentaire" class="form-label">Your Comment:</label>
                                <!--<textarea id="commentaire" name="commentaire" class="form-control" placeholder="Write your comment here..." required></textarea>-->
                                <input type="text" id="commentaire" name="commentaire" class="form-control" placeholder="Write your comment here..." required>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Comment</button>
                        </form>
                        <h3 class="mt-4">Comments:</h3>
                            {% if event.Comments is not empty %}
                                <ul class="list-group">
                                     {% for comment in event.Comments %}
                                        <li class="list-group-item">
                                            <span class="fw-bold">ID={{ comment.id }} : {{ comment.commentaire }} </span> 
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p class="mt-3">No comments yet.</p>
                            {% endif %}
                        

                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
