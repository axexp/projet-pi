{% extends 'base_front.html.twig' %}

{% block title %}Events{% endblock %}
{% block navigate %}
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">

                    <a href="{{ path('app_homefront',  {'id':user.id}) }}" class="nav-item nav-link ">Home</a>
                    <a href="" class="nav-item nav-link">About</a>
                    <a href="" class="nav-item nav-link">Services</a>
                    <a href="{{ path('app_showb',  {'id':user.id}) }}" class="nav-item nav-link active">Events</a>
                    


                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                        <div class="dropdown-menu m-0">
                            <a href="" class="dropdown-item">Destination</a>
                            <a href="" class="dropdown-item">Booking</a>
                            <a href="" class="dropdown-item">Travel Guides</a>
                            <a href="" class="dropdown-item">Testimonial</a>
                            <a href="" class="dropdown-item">404 Page</a>
                        </div>
                    </div>
                    <a href="" class="nav-item nav-link">Contact</a>
                </div>
                 <!--<a href="" class="btn btn-primary rounded-pill py-2 px-4">Register</a>-->
            </div>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!--<h1>List Event</h1>-->
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center text-primary px-3">Event</h6>
                <h1 class="mb-5">Awesome Event</h1>
            </div>

            <div class="mb-3">
                <form class="d-flex" method="get" action="{{ path('app_showb',  {'id':user.id}) }}">
                    <input class="form-control me-2" type="text" name="search" value="{{ searchQuery }}" placeholder="Search events" aria-label="Search">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>
            <div class="container-xxl py-5">

            <div class="row g-4 justify-content-center">
                {% for a in event %}
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="{{ loop.index * 0.2 }}s">
                        <div class="package-item">
                            
                            <div>
                                {% if a.image %}
                                    <img src="{{ asset('uploads/images/' ~ a.image) }}" alt="{{ a.name }}" class="img-fluid">
                                {% endif %}
                            </div>

                            <div class="d-flex border-bottom">
                                <small class="flex-fill text-center border-end py-2">
                                    <i class="fa fa-calendar-alt text-primary me-2"></i>{{ a.datedebut | date('M-d-Y') }}</small>
                            </div>

                            <div class="text-center p-4">
                                <h6 class="card-title">{{ a.type }}</h6>
                                <p>{{ a.name }}</p>
                                <div class="d-flex justify-content-center mb-2">
                                    <a href="{{ path('app_eventDetails',  {'id': a.id,'userId': user.id}) }}" class="btn btn-sm btn-primary px-3" style="border-radius: 30px;">detail</a>
                                </div>                                 
                            </div>

                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}




