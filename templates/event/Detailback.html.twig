<div class="col-md-4">
    <button id="showeventBtn">Event Day</button>
    <div id="calendar" style="height: 220px; width: 370px;"></div>
    
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@3.10.2/dist/fullcalendar.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@3.10.2/dist/fullcalendar.min.js"></script>
    <!--   sha256-TAsNribJnjsRvnC5kKcDvk3rdeIYhBBFguDiF3htMgk=   -->
    
    <script>
        var $j = jQuery.noConflict();
    </script>
    
    <script>
        // Extracting start and end dates from your event
        var startDate = '{{ event.datedebut|date("Y-m-d") }}';
        var endDate = moment('{{ event.datefin|date("Y-m-d") }}').add(1, 'days').format('YYYY-MM-DD');
    
        $j('#calendar').fullCalendar({
            defaultView: 'month',
            events: [
                {
                    title: 'Your Event',
                    start: startDate,
                    end: endDate 
                }
            ],
            header: {
                left: 'prev,next',
                center: 'title',
                right: 'today' // Add the 'today' button directly in the header
            },
            eventClick: function(calEvent, jsEvent, view) {
                // Handle event click, for example, display event details
                alert('Event Clicked: ' + calEvent.title + '\nStart: ' + calEvent.start.format());
            }
        });
    
        // Add click event for the "Show Event Date" button
        $j('#showeventBtn').on('click', function() {
            // Retrieve the start date of the event
            var eventStartDate = $j('#calendar').fullCalendar('clientEvents')[0].start.format('YYYY-MM-DD');
    
            // Set the calendar's date to the event start date
            $j('#calendar').fullCalendar('gotoDate', eventStartDate);
        });
    </script>
    
</div>



