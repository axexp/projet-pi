<div align="center" >
    <h1 >Liste de vos commande</h1>
</div>
<div class="container px-1 px-md-4 py-5 mx-auto">
  
  {% for product in comisfounds %}
    
    <div class="card">
        <div class="row d-flex justify-content-between px-3 top">
            <div class="d-flex">
                <h5>ORDER <span class="text-primary font-weight-bold">#{{ product.id }}</span></h5>
            </div>
            <div class="d-flex flex-column text-sm-right">
                <p class="mb-0">Order Total <span>{{product.total}}</span></p>
                <p>USPS <span class="font-weight-bold">234094567242423422898</span></p>
            </div>
        </div>
        <!-- Add class 'active' to progress -->
        <div class="row d-flex justify-content-center">
            <div class="col-12">
                <ul id="progressbar" class="text-center">
                {% if product.etat == "In PROGRESS" %}
                    <li class="active step0"></li>
                    <li class="step0"></li>
                    <li class="step0"></li>
                    <li class=" step0"></li>
                {% endif %}    
                {% if product.etat == "shipped" %}
                    <li class="active step0"></li>
                    <li class="active step0"></li>
                    <li class=" step0"></li>
                    <li class=" step0"></li>
                {% endif %}    
                {% if product.etat == "road" %}
                    <li class="active step0"></li>
                    <li class="active step0"></li>
                    <li class="active step0"></li>
                    <li class=" step0"></li>
                {% endif %}    
                 {% if product.etat == "done" %}
                    <li class="active step0"></li>
                    <li class="active step0"></li>
                    <li class="active step0"></li>
                    <li class="active step0"></li>
                {% endif %}    
                
                </ul>
            </div>
        </div>
        <div class="row justify-content-between top">
            <div class="row d-flex icon-content">
                <img class="icon" src="https://th.bing.com/th/id/R.e1dbcf3add091542d0c701b7d14a1fb2?rik=rKJP%2fWwCF2WtiQ&pid=ImgRaw&r=0">
                <div class="d-flex flex-column">
                    <p class="font-weight-bold">Order<br>Processed</p>
                </div>
            </div>
            <div class="row d-flex icon-content">
                <img class="icon" src="{{asset('https://th.bing.com/th/id/R.6ff077a3c5add809c69d2dcd19d13950?rik=J8SUiODDINiy%2bA&riu=http%3a%2f%2fyamankirmaeleme.com%2fwp-content%2fuploads%2f2019%2f11%2fDelivered-512.png&ehk=2IR3%2fRGWIoiOYyVXBJSWUasEBlSUb8ClmdNAHyKBs1Q%3d&risl=&pid=ImgRaw&r=0')}}">
                <div class="d-flex flex-column">
                    <p class="font-weight-bold">Order<br>Shipped</p>
                </div>
            </div>
            <div class="row d-flex icon-content">
                <img class="icon" src="https://images.rawpixel.com/image_png_800/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIyLTEyL3JtLTYwNC1tb2NrdXAtcGJ3azU2Ny5wbmc.png">
